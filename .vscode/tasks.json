{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "CMake: Debug pazusoba",
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--target",
				"debug_pazusoba"
			],
			"options": {
				"cwd": "${workspaceFolder}/debug"
			},
			"problemMatcher": [
				// "$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "CMake: Test pazusoba",
			"command": "cmake",
			"args": [
				"--build",
				".",
				"--target",
				"test_pazusoba"
			],
			"options": {
				"cwd": "${workspaceFolder}/debug"
			},
			"problemMatcher": [
				// "$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}